<!-- add log4j2 config -->

<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- set up log path and log file path -->
    <Properties>
        <Property name="LOG_PATH" value="./logs" />
        <Property name="LOG_FILE" value="newsapp.log" />
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
        <RollingFile name="RollingFile" fileName="${LOG_PATH}/${LOG_FILE}"
                     filePattern="${LOG_PATH}/${LOG_FILE}.%d{yyyy-MM-dd}">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
        <!-- logging at trace level -->
        <Logger name="com.capstone.newsapp" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
    </Loggers>
</Configuration>